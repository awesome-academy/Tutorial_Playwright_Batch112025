{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "indentStyle": "space",
    "indentWidth": 2,
    "quoteStyle": "single",
    "semicolons": "always",
    "trailingComma": "all"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error",
        "noVar": "error",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "error",
        "noUselessElse": "error",
        "noUnusedVariables": "warn",
        "noImplicitBoolean": "warn",
        "noNegationElse": "warn",
        "noMultipleSpaces": "warn"
      },

      "correctness": {
        "noConstantCondition": "warn",
        "noEmptyPattern": "error",
        "noUndeclaredVariables": "error",
        "noUnreachable": "error",
        "noDuplicateObjectKeys": "error",
        "noRedeclare": "error"
      },

      "complexity": {
        "noUselessSwitchCase": "warn",
        "noDuplicateCase": "error",
        "noExtraBooleanCast": "warn"
      },

      "nursery": {
        "noDebugger": "error",
        "noConsole": "off",
        "useBlockStatements": "error"
      }
    }
  },

  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": ["src", "tests"],
    "ignore": ["dist", "node_modules"]
  },
  "overrides": [
    {
      "include": ["tests/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "style/noUnusedVariables": "off",
          "correctness/noUndeclaredVariables": "off",
          "nursery/noDebugger": "off"
        }
      }
    }
  ]
}
